---
title: Blog
pageable: true
per_page: 10
---
<h1>Blog</h1>

<% content_for :breadcrumb do %>
  <li>Blog
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <article>
    <h2><time datetime="<%= article.date.strftime('%FT%T') %>"><%= article.date.strftime('%Y %B %d') %></time> <%= link_to article.title, article %></h2>
    <%= article.summary %>

    <p><%= link_to "read more", article %></p>
  </article>
<% end %>
