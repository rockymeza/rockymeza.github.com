<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  
  <!-- Always force latest IE rendering engine or request Chrome Frame -->
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
  
  <title><%= data.page.title %> Rocky Meza</title>
  
  <%= stylesheet_link_tag "rockymeza" %>

  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-23031385-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
</head>
<body class="<%= page_classes %>">
  <div class="wrapper">
    <header>
      <a href="/"><img src="https://secure.gravatar.com/avatar/2eb6399115a962582e441abbd04c32dd?s=100"> Rocky Meza</a>
      <nav>
        <ul>
          <li>
            <strong>Internal</strong>
            <ul>
              <li><a href="/blog/">Blog</a>
              <li><a href="/projects/">Projects</a>
            </ul>
          </li>
          <li>
            <strong>External</strong>
            <ul>
              <li><a href="http://www.github.com/rockymeza">GitHub</a>
              <li><a href="http://www.flickr.com/photos/rockymeza">Flickr</a>
              <li><a href="https://soundcloud.com/rocky-meza">SoundCloud</a>
            </ul>
          </li>
        </ul>
      </nav>
    </header>

    <div class="content">
      <% if content_for?(:before_content) %>
        <%= yield_content :before_content %>
      <% end %>

      <section role="main">
        <% if content_for?(:breadcrumb) %>
          <ul class="breadcrumb">
            <li><a href="/">Home</a>
            <%= yield_content :breadcrumb %>
          </ul>
        <% end %>

        <%= yield %>
      </section>
    </div>

    <footer>
      <%= year %> Rocky Meza (<a href="https://github.com/rockymeza/rockymeza.github.com">view source</a>)
    </footer>
  </div>
</body>
</html>
